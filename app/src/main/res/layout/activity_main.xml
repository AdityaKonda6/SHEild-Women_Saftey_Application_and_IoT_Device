<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/sheild"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/backButton"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="245dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-24dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:contentDescription="Exit Button"
        android:focusable="true"
        android:onClick="goBackToMainActivity"
        android:src="@drawable/exit" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"></RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Select Login Type"
            android:textColor="@color/buttoncolor"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonstyle"
            android:text="Admin"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttonstyle"
            android:text="User"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonSHEild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttonstyle"
            android:text="SHEild"
            android:textColor="@color/white" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="395dp"
        android:layout_height="339dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="64dp"
        app:srcCompat="@drawable/girlnoviolencenoback" />


</RelativeLayout>