<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/nonameback"
    tools:context="com.project.user.UserDashboardActivity">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/progressBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/linearLayout"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/textViewUData"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonOpenLocation"
            android:text="Open Location"
            android:layout_centerInParent="true"
            android:background="@drawable/buttonstyle"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"/>


    </LinearLayout>

    <ImageView
        android:id="@+id/img_logo1"
        android:layout_width="175dp"
        android:layout_height="262dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="423dp"
        android:layout_marginEnd="213dp"
        android:src="@drawable/girllocation1" />

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="440dp"
        android:layout_height="420dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="-101dp"
        android:src="@drawable/girlsitting" />




</RelativeLayout>
